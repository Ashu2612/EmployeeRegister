@model IEnumerable<EmployeeRegister.Models.ITaskManager>

@{
    ViewData["Title"] = "Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Submitted Tasks</h1>

 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimePeriod)
            </th>
            <th>
        </tr>
      </thead>
    
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimePeriod)
            </td>
        
            <td>
                <td class="text-center">
                    <a asp-controller="Employee" asp-action="Edit" class="btn btn-outline-primary" asp-route-id ="@item.ID">Edit</a>
                </td>
                <td class="text-center">
                    <a  asp-action="Delete" class="btn btn-outline-danger onclick = "return confirm('Are you sure?')"  asp-route-id ="@item.ID">Delete</a>
                </td>
            </td>
         
        </tr>
}
    </tbody>
</table>
